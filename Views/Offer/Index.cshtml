@model IEnumerable<OfferLetter>

@{
    ViewData["Title"] = "Offer Letter";
    ViewData["PageTitle"] = "Offer Letter";
}
<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="panel panel-bd ">
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-sm-3 control-label"> Offer Letter:</label>
                    <label class="col-sm-3 control-label">    
                        
                        @Html.ActionLink("Download", "UserDownload", null,
                        htmlAttributes: new { @class = "btn btn-primary btn-xs"})

                        @if (Context.Request.Cookies["role"]!=null && Context.Request.Cookies["role"].ToString() == "admin")
                        {                        
                            <a asp-action="Upload" class="btn btn-primary btn-xs"> Upload </a>
                        }
                        
                    </label>
                </div>
                <br/>
                <label>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </label>
                @if (Context.Request.Cookies["role"]!=null && Context.Request.Cookies["role"].ToString() == "admin")
                {                        
                    <div class="table-responsive col-lg-12 m-t-20">
                        <table id="dataTableExample1" class="table table-bordered table-striped ">
                            <thead>
                                <tr class="info">
                                    <th>Username</th>
                                    <th>Offer Letter</th>
                                    <th>Delete</th>
                                    <th>Download</th>                                                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EmployeeCode)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.URL)
                                    </td>

                                    <td>                                        
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id },
                                        htmlAttributes: new { @class = "btn btn-danger btn-xs"})
                                    </td>

                                    <td>                                        
                                        @Html.ActionLink("Download", "Download", new { id = item.Id },
                                        htmlAttributes: new { @class = "btn btn-primary btn-xs"})
                                    </td>

                                </tr> 
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>