@model Nominee
@{
    ViewData["Title"] = "Nominee Detail";
    ViewData["PageTitle"] = "Nominee Detail";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="panel panel-bd ">
            <div class="panel-body">
                <form method="POST">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                   
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="NomineeName"></label>
                            <input asp-for="NomineeName" class="form-control" />
                            <span asp-asp-validation-for="NomineeName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="DateOfBirth"></label>
                            <input asp-for="DateOfBirth" class="form-control" />
                            <span asp-asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Relation"></label>
                            <input asp-for="Relation" class="form-control" />
                            <span asp-asp-validation-for="Relation" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Contact"></label>
                            <input asp-for="Contact" class="form-control" />
                            <span asp-asp-validation-for="Contact" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Nominee Address</label>
                            <input asp-for="Address1" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Address1)" />
                            <span asp-asp-validation-for="Address1" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <input asp-for="Address2" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Address2)"/>
                            <span asp-asp-validation-for="Address2" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <input asp-for="City" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.City)"/>
                            <span asp-asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <input asp-for="State" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.State)"/>
                            <span asp-asp-validation-for="State" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <input asp-for="Pincode" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Pincode)"/>
                            <span asp-asp-validation-for="Pincode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-primary">Cancle</a>
                        <input type="submit" class="btn btn-add" value="Save"/>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>

